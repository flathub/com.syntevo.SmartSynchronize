{
  "app-id": "com.syntevo.SmartSynchronize",
  "command": "smartsynchronize.sh",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "18.08",
  "separate-locales": false,
  "sdk": "org.freedesktop.Sdk",
  "finish-args": [
    "--device=all",
    "--device=dri",
    "--env=SMARTSYNCHRONIZE_JAVA_HOME=/app/extra/smartsynchronize/jre/",
    "--filesystem=home",
    "--share=ipc",
    "--socket=x11",
    "--talk-name=org.freedesktop.Notifications"
  ],
  "modules": [
    {
      "name": "smartsynchronize",
      "buildsystem": "simple",
      "build-commands": [
        "install -Dm0755 -t /app/bin/ apply_extra",
        "install -Dm0755 -t /app/bin/ smartsynchronize.sh",
        "install -Dm0644 -t /app/share/applications/ com.syntevo.SmartSynchronize.desktop",
        "install -Dm0644 -t /app/share/icons/hicolor/scalable/apps/ com.syntevo.SmartSynchronize.svg",
        "install -Dm0644 -t /app/share/metainfo/ com.syntevo.SmartSynchronize.appdata.xml"
      ],
      "sources": [
        {
          "type": "extra-data",
          "filename": "smartsynchronize.tar.gz",
          "only-arches": ["x86_64"],
          "sha256": "90d36afe41ffe2de3e34c3f8651fd1430bfbcaa01a95e2fa7edb2f26883f8d1d",
          "size": 23371944,
          "url": "https://www.syntevo.com/downloads/smartsynchronize/smartsynchronize-linux-3_5_1.tar.gz"
        },
        {
          "type": "file",
          "path": "com.syntevo.SmartSynchronize.appdata.xml"
        },
        {
          "type": "file",
          "path": "com.syntevo.SmartSynchronize.desktop"
        },
        {
          "type": "file",
          "path": "com.syntevo.SmartSynchronize.svg"
        },
        {
          "type": "script",
          "commands": [
            "tar -zxf smartsynchronize.tar.gz",
            "rm -f smartsynchronize.tar.gz"
          ],
          "dest-filename": "apply_extra"
        },
        {
          "type": "script",
          "commands": [
            "exec env /app/extra/smartsynchronize/bin/smartsynchronize.sh \"$@\""
          ],
          "dest-filename": "smartsynchronize.sh"
        }
      ]
    }
  ]
}
